<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bakss.server.mapper.BakssApplyMapper">
    
    <resultMap type="BakssApply" id="BakssApplyResult">
        <result property="id"    column="id"    />
        <result property="applyType"    column="apply_type"    />
        <result property="applyUser"    column="apply_user"    />
        <result property="applyTime"    column="apply_time"    />
        <result property="backupId"    column="backup_id"    />
        <result property="backupTime"    column="backup_time"    />
        <result property="backupStatus"    column="backup_status"    />
        <result property="flowId"    column="flow_id"    />
        <result property="remark"    column="remark"    />
        <result property="deleted"    column="deleted"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <resultMap type="BakssTask" id="BakssTaskResult">
        <result property="id"    column="id"    />
        <result property="applyType"    column="apply_type"    />
        <result property="applyUser"    column="apply_user"    />
        <result property="applyTime"    column="apply_time"    />
        <result property="backupId"    column="backup_id"    />
        <result property="backupTime"    column="backup_time"    />
        <result property="backupStatus"    column="backup_status"    />
        <result property="flowId"    column="flow_id"    />
        <result property="flowStep"    column="flow_step"    />
        <result property="reviewUser"    column="review_user"    />
        <result property="remark"    column="remark"    />
        <result property="deleted"    column="deleted"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectBakssApplyVo">
        select id, apply_type, apply_user, apply_time, backup_id, backup_time, backup_status, flow_id, remark, deleted, create_time, create_by, update_time from bakss_apply
    </sql>

    <sql id="selectBakssTaskVo">
        select id, apply_type, apply_user, apply_time, backup_id, backup_time, backup_status, flow_id, flow_step, review_user, remark, deleted, create_time, create_by, update_time from bakss_apply
    </sql>

    <select id="selectBakssApplyList" parameterType="BakssApply" resultMap="BakssApplyResult">
        <include refid="selectBakssApplyVo"/>
        <where>  
            <if test="applyType != null "> and apply_type = #{applyType}</if>
            <if test="applyUser != null  and applyUser != ''"> and apply_user = #{applyUser}</if>
            <if test="applyTime != null "> and apply_time = #{applyTime}</if>
            <if test="backupId != null "> and backup_id = #{backupId}</if>
            <if test="backupTime != null "> and backup_time = #{backupTime}</if>
            <if test="backupStatus != null "> and backup_status = #{backupStatus}</if>
            <if test="flowId != null "> and flow_id = #{flowId}</if>
            <if test="deleted != null "> and deleted = #{deleted}</if>
        </where>
    </select>
    
    <select id="selectBakssApplyById" parameterType="String" resultMap="BakssApplyResult">
        <include refid="selectBakssApplyVo"/>
        where id = #{id}
    </select>

    <insert id="insertBakssApply" parameterType="BakssApply">
        insert into bakss_apply
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="applyType != null">apply_type,</if>
            <if test="applyUser != null">apply_user,</if>
            <if test="applyTime != null">apply_time,</if>
            <if test="backupId != null">backup_id,</if>
            <if test="backupTime != null">backup_time,</if>
            <if test="backupStatus != null">backup_status,</if>
            <if test="flowId != null">flow_id,</if>
            <if test="remark != null">remark,</if>
            <if test="deleted != null">deleted,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="applyType != null">#{applyType},</if>
            <if test="applyUser != null">#{applyUser},</if>
            <if test="applyTime != null">#{applyTime},</if>
            <if test="backupId != null">#{backupId},</if>
            <if test="backupTime != null">#{backupTime},</if>
            <if test="backupStatus != null">#{backupStatus},</if>
            <if test="flowId != null">#{flowId},</if>
            <if test="remark != null">#{remark},</if>
            <if test="deleted != null">#{deleted},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateBakssApply" parameterType="BakssApply">
        update bakss_apply
        <trim prefix="SET" suffixOverrides=",">
            <if test="applyType != null">apply_type = #{applyType},</if>
            <if test="applyUser != null">apply_user = #{applyUser},</if>
            <if test="applyTime != null">apply_time = #{applyTime},</if>
            <if test="backupId != null">backup_id = #{backupId},</if>
            <if test="backupTime != null">backup_time = #{backupTime},</if>
            <if test="backupStatus != null">backup_status = #{backupStatus},</if>
            <if test="flowId != null">flow_id = #{flowId},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="deleted != null">deleted = #{deleted},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBakssApplyById" parameterType="String">
        delete from bakss_apply where id = #{id}
    </delete>

    <delete id="deleteBakssApplyByIds" parameterType="String">
        delete from bakss_apply where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="getDbaTodoTaskList" resultMap="BakssTaskResult">
        <include refid="selectBakssTaskVo"></include>
        from bakss_apply a, bakss_apply_flow b
        where a.flow_id = b.flow_id and b.review_status = 0 and b.flow_step ='dba'
    </select>

    <select id="getAdminTodoTaskList" resultMap="BakssTaskResult">
        <include refid="selectBakssTaskVo"></include>
        from bakss_apply a, bakss_apply_flow b
        where a.flow_id = b.flow_id and b.review_status = 0 and b.flow_step ='admin'
    </select>

    <select id="getDbaLeaderTodoTaskList" resultMap="BakssTaskResult">
        <include refid="selectBakssTaskVo"></include>
        from bakss_apply a, bakss_apply_flow b
        where a.flow_id = b.flow_id and b.review_status = 0 and b.flow_step ='dbaLeader'
    </select>

    <select id="getOwnerTodoTaskList" resultMap="BakssTaskResult">
        <include refid="selectBakssTaskVo"></include>
        from bakss_apply a, bakss_apply_flow b, bakss_apply_backup_owner c
        where a.flow_id = b.flow_id and b.review_status = 0 and b.flow_step ='owner' and a.id = c.apply_id and c.old_owner = #{owner}
    </select>

    <select id="getLeaderTodoTaskList" resultMap="BakssTaskResult">
        <include refid="selectBakssTaskVo"></include>
        from bakss_apply a, bakss_apply_flow b
        where a.flow_id = b.flow_id and b.review_status = 0 and b.flow_step ='leader' and a.apply_user in (
            <foreach collection="user" separator=",">
                #{user}
            </foreach>
            )
    </select>

    <select id="getAssignTodoTaskList" resultMap="BakssTaskResult">
        <include refid="selectBakssTaskVo"></include>
        from bakss_apply a, bakss_apply_flow b, bakss_apply_backup_permis c
        where a.flow_id = b.flow_id and b.review_status = 0 and b.flow_step ='assign' and a.id = c.apply_id and c.grant_user = #{user}
    </select>
</mapper>